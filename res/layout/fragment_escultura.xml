<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    
    tools:context="com.jmv.codigociudadano.resistenciarte.HomeActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
          android:layout_marginBottom="-5dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center" >

                <FrameLayout
                    android:id="@+id/default_image"
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:orientation="horizontal"
                    android:scrollbarSize="15dp"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical" >

                    <ImageView
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:background="@drawable/ic_action_pin"
                        android:scaleX="0.5"
                        android:scaleY="0.5" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/progress"
                    android:layout_width="144dp"
                    android:layout_height="144dp" >

                    <ProgressBar
                        android:layout_width="144dp"
                        android:layout_height="144dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:focusable="true"
                        android:paddingLeft="10dp"
                        android:scaleX="0.25"
                        android:scaleY="0.25" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" >

                    <Button
                        android:id="@+id/share_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:drawableLeft="@drawable/ic_share"
                        android:enabled="false"
                        android:focusable="true"
                        android:gravity="right" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/detalle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_text"
            android:enabled="false"
            android:focusable="true"
            android:gravity="left|center_vertical"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/read_more"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="-8dp"
            android:textSize="13sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/author"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_autor"
            android:enabled="false"
            android:focusable="true"
            android:gravity="left|center_vertical"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
                        android:layout_marginBottom="-8dp"
            
            android:text="@string/author_getting"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/ubicacion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pin"
            android:enabled="false"
            android:focusable="true"            
            android:gravity="left|center_vertical"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/title_obra"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>